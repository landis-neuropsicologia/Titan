<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Página não encontrada</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="container py-5 text-center">
                <div class="error-container py-5">
                    <h1 class="display-1">404</h1>
                    <h2 class="mb-4">Página não encontrada</h2>
                    <p class="lead mb-4">Desculpe, mas a página que você está procurando não existe ou foi movida.</p>
                    <a href="/" class="btn btn-primary">Voltar para a Home</a>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>
